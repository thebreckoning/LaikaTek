<!DOCTYPE html>
<!-- my_devices.html -->
<html lang="en">

<head>
    {% include './head.html' %}
</head>

<body>
    <h1>Devices</h1>
    {% if user_devices %}
    <div class="devices-container">
        {% for device, feedtimes in user_devices %}
        <div class="device-info">
            <strong>Nickname:</strong> {{ device.nickname }}<br>
            <strong>Device Type:</strong> {{ device.device_type }}<br>

            {% if feedtimes %}
            <strong>Feed Times:</strong>
            <ul>
                {% for time in feedtimes %}
                <li>{{ time.time.strftime('%H:%M') }}</li>
                {% endfor %}
            </ul>
            {% else %}
            <p>No feed times associated with this device.</p>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% else %}
    <p>You don't have any devices yet!</p>
    {% endif %}
</body>

</html>
